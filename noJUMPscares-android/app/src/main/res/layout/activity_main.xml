<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigationShadow">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/navigationShadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/silverAccent"
        app:layout_constraintTop_toBottomOf="@id/fragmentView"
        app:layout_constraintBottom_toTopOf="@id/navigationView"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        app:itemBackground="@color/backgroundColorLight"
        app:itemIconTint="@drawable/selector"
        android:elevation="10dp"
        app:itemTextColor="@color/silverAccent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>