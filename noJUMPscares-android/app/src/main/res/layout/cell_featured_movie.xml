<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/featuredMoviePoster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="245dp"/>
    <TextView
        android:id="@+id/featuredMovieTitle"
        app:layout_constraintLeft_toLeftOf="@id/featuredMoviePoster"
        app:layout_constraintRight_toRightOf="@id/featuredMoviePoster"
        app:layout_constraintTop_toBottomOf="@id/featuredMoviePoster"
        android:text="Star Wars: A New Hope"
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>